/* form */
.form-box {
  display: block;
}
.form-item {
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #E0E0E0;
}
.form-item__input {
  flex: 1;
  height: 64rpx;
  font-size: 34rpx;
  color: #666;
}
.form-item__img {
  width: 16rpx;
  height: 26rpx;
  padding-top: 19rpx;
}
.form-item__textarea {
  width: 100%;
  height: 144rpx;
  line-height: 48rpx;
  font-size: 34rpx;
  color: #666;
}