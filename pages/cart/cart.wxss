/* pages/cart/cart.wxss */

.plr-30 {
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.pl-30 {
  padding-left: 30rpx;
}
.pr-30 {
  padding-right: 30rpx;
}
.flex-row {
  display: flex;
  align-items: center;
}
.flex-col {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.flex-1 {
  flex: 1;
}
/* 购物车头部 */
.cart-header {
  font-size: 28rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  border-bottom: 1px solid #e0e0e0;
}
/* 购物车没有商品 */
.cart-no-data {
  margin-top: 424rpx;
  font-size: 30rpx;
  color: #cdcdcd;
  text-align: center;
}
/* 购物车商品块 */
.cart-block {
  background-color: #fff;
  margin-bottom: 18rpx;
  overflow: hidden;
}
/* 左滑删除 */
.cart-item__del {
  font-size: 30rpx;
  color: #fff;
  background: #d4372f;
  width: 160rpx;
  height: 100%;
  border-radius: 0;
}
/* 编辑商品数量 */
.cart-item__num--edit {
  padding: 18rpx 38rpx;
  border: 1rpx solid #232326;
  border-radius: 118rpx;
}
/* 配送提示 */
.cart-delivery {
  background-color: #fbf2e9;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #f48f19;
}
.info-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
/* 统计 */
.cart-stat {
  background-color: #fff;
}
.cart-stat__subtotal {
  font-size: 36rpx;
}
.cart-stat__total {
  font-size: 24rpx;
  color: #848689;
}
/* 操作 */
.cart-opt {
  font-size: 36rpx;
  color: #fff;
}
.cart-opt__select {
  background-color: #999;
}
.cart-opt__place {
  background-color: #d4372f;
}
.cart-opt__gather {
  background-color: #f48f19;
}
.cart-opt__del {
  height: 128rpx;
  line-height: 128rpx;
  background-color: #fff;
}
.cart-opt__del--inactive {
  padding: 0 62rpx;
  background-color: #999;
}
.cart-opt__del--active {
  padding: 0 62rpx;
  background-color: #d4372f;
}
/* 重写checkbox样式 */
checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 34rpx;
  height: 34rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: none;
  background: #d4372f;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
/* 遮罩层 */
.mask-layer {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background-color: #000 !important;
  opacity: 0.5;
  /* overflow: hidden;  */
}
/* 无法结算商品弹框 */
.dialog {
  width: 680rpx;
  overflow: hidden;
  position: fixed;
  top: 200rpx;
  left: 35rpx;
  z-index: 1001;
  background-color: #fff;
  border-radius: 3rpx;
}
.dialog-title {
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  font-size: 36rpx;
  color: #333;
  box-shadow: 0 2rpx 5rpx 0 #ccc;
}
.split-line {
  border-bottom: 1px solid #e0e0e0;
} 
.dialog-desc {
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
  font-size: 28rpx;
  color: #d4372f;
}
.dialog-body {
  padding-left: 24rpx;
  padding-right: 24rpx;
}
.dialog-confirm {
  height: 104rpx;
  line-height: 104rpx;
  text-align: center;
  background-color: #d4372f;
  font-size: 38rpx;
  color: #fff;
  margin-top: 34rpx;
}