/* head */
.head-box {
  padding: 32rpx 20rpx;
  background: #D4372F;
}
.head-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
}
.head-avatar__img {
  width: 120rpx;
  height: 120rpx;
}
.head-info {
  padding-left: 22rpx;
}
.head-info__name {
  line-height: 36rpx;
  padding-bottom: 30rpx;
  font-size: 32rpx;
  color: #fff;
}
.head-info__phone {
  position: relative;
  line-height: 28rpx;
  font-size: 24rpx;
  color: #fff;
}
.head-info__phone::after {
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #fff;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -7rpx;
  right: -20rpx;
}
/* order */
.order-box {
  background: #fff;
}
.order-head__title {
  flex: 1;
}
.order-head__img {
  width: 36rpx;
  height: 36rpx;
}
.order-item {
  width: 25%;
  text-align: center;
}
.order-item__img {
  width: 120rpx;
  height: 120rpx;
}
/* order */
.order-item-msg {
  display: inline-block;
  position: relative;
  padding-top: 42rpx;
  padding-bottom: 18rpx;
}
.order-item__img--order {
  width: 37rpx;
  height: 47rpx;
}
.order-item__img--receive {
  width: 46rpx;
  height: 45rpx;
}
.order-item__img--cancel {
  width: 37rpx;
  height: 46rpx;
}
.order-item__img--all {
  width: 41rpx;
  height: 47rpx;
}
.order-item__num {
  position: absolute;
  top: 18rpx;
  right: -24rpx;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  color: #D4372F;
  text-align: center;
  background: #fff;
  border: 1rpx solid #D4372F;
  border-radius: 18rpx;
}
.order-item__text {
  line-height: 30rpx;
  padding-bottom: 42rpx;
  font-size: 28rpx;
  color: #81838E;
}
.order-item--all {
  position: relative;
  border-left: 1rpx solid #E0E0E0;
}
.order-item--all::after {
  content: "";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 1rpx 1rpx 0 0;
  border-color: #E0E0E0;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  background: #fff;
  top: 50%;
  margin-top: -6rpx;
  left: -6rpx;
}
/* list */
.list-cell {
  padding: 22rpx 30rpx 22rpx 20rpx;
  line-height: 72rpx;
}
.list-cell + .list-cell {
  border-top: 1rpx solid #E0E0E0;
}
.list-cell__icon {
  width: 72rpx;
  height: 72rpx;
}
.list-cell__text {
  flex: 1;
  padding-left: 15rpx;
  font-size: 34rpx;
  color: #232326;
}
.list-cell__img {
  width: 36rpx;
  height: 36rpx;
}
.list-cell__btn {
  position: relative;
  padding-right: 24rpx;
  font-size: 34rpx;
  color: #D4372F;
}
.list-cell__btn::after {
  content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #C7C7CC;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -10rpx;
  right: 0;
}