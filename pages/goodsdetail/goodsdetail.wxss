page {
  padding-bottom: 128rpx;
}
/* swiper */
.goods-swiper {
  height: 750rpx;
}
.goods-swiper__img {
  width: 750rpx;
  height: 750rpx;
}
/* time */
.goods-time {
  padding: 24rpx 30rpx;
  color: #fff;
  background: #FF5959;
}
.goods-time-left {
  flex: 1;
}
.goods-time__title {
  line-height: 36rpx;
  font-size: 34rpx;
}
.goods-time__desc {
  padding-top: 10rpx;
  line-height: 28rpx;
  font-size: 26rpx;
}
.goods-time__text {
  line-height: 28rpx;
  font-size: 26rpx;
  text-align: right;
}
.goods-time__tag {
  padding-top: 14rpx;
  font-size: 26rpx;
}
.goods-time__tag--text {
  margin-left: 6rpx;
  margin-right: 6rpx;
  padding: 0 5rpx;
  line-height: 32rpx;
  font-size: 30rpx;
  color: #D4372F;
  background: #fff;
  border-radius: 5rpx;
}
/* brief */
.goods-brief {
  padding: 30rpx;
}
.goods-brief--title {
  line-height: 36rpx;
  font-size: 34rpx;
  color: #232326;
}
.goods-brief-info {
  padding-top: 20rpx;
}
.goods-brief__price {
  line-height: 56rpx;
  font-size: 32rpx;
  color: #D4372F;
}
.goods-brief__price--text {
  font-size: 52rpx;
}
.goods-brief__cost {
  flex: 1;
  padding-left: 20rpx;
  line-height: 56rpx;
  font-size: 28rpx;
  color: #81838E;
  text-decoration: line-through;
}
.goods-brief__num {
  line-height: 56rpx;
  font-size: 28rpx;
  color: #81838E;
}
/* coupon */
.goods-coupon {
  padding-top: 30rpx;
  padding-left: 30rpx;
}
.goods-coupon__title {
  line-height: 36rpx;
  font-size: 32rpx;
  color: #232326;
}
.goods-coupon-cell {
  padding: 30rpx 30rpx 30rpx 0;
  height: 36rpx;
  line-height: 36rpx;
  border-bottom: 1rpx solid #E3E5E9;
}
.goods-coupon__tag {
  width: 90rpx;
  height: 36rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  background: linear-gradient(to right, #FA3264, #FF764C);
}
.goods-coupon__text {
  padding-left: 10rpx;
  flex: 1;
  font-size: 30rpx;
  color: #848689;
}
.goods-coupon__btn {
  font-size: 30rpx;
  color: #D4372F;
}
.goods-coupon__icon {
  position: relative;
}
.goods-coupon__icon::after {
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #ccc;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -7rpx;
}
/* param */
.goods-param {
  padding-top: 30rpx;
  padding-left: 30rpx;
}
.goods-param__title {
  line-height: 36rpx;
  font-size: 32rpx;
  color: #232326;
}
.goods-param-cell {
  padding: 28rpx 30rpx 28rpx 0;
  height: 32rpx;
  line-height: 32rpx;
  border-bottom: 1rpx solid #E3E5E9;
}
.goods-param__key {
  width: 188rpx;
  font-size: 30rpx;
  color: #999;
}
.goods-param__value {
  flex: 1;
  font-size: 30rpx;
  color: #666;
}
/* ctrl */
.goods-ctrl {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  box-shadow: 0 -7px 14px 0 rgba(0,0,0,0.14);
}
.goods-ctrl-cart {
  flex: 1;
  background: #fff;
  text-align: center;
}
.goods-ctrl-info {
  position: relative;
  display: inline-block;
  padding-top: 16rpx;
}
.goods-ctrl__img {
  width: 53rpx;
  height: 53rpx;
}
.goods-ctrl__num {
  position: absolute;
  top: 8rpx;
  right: -15rpx;
  padding: 2rpx 6rpx;
  line-height: 24rpx;
  font-size: 22rpx;
  color: #fff;
  background: #D4372F;
  border-radius: 20rpx;
}
.goods-ctrl__text {
  line-height: 28rpx;
  font-size: 24rpx;
  color: #232326;
  padding-bottom: 12rpx;
}
.goods-ctrl__btn {
  flex: 1;
  line-height: 114rpx;
  font-size: 36rpx;
  border-radius: 0;
}