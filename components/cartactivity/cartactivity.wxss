/* components/cartactivity/cartactivity.wxss */
.flex-row {
  display: flex;
  align-items: center;
}
.flex-1 {
  flex: 1;
}
.on-sale {
  min-height: 88rpx;
}
.on-sale__type {
  margin-right: 16rpx;
  background-image: linear-gradient(-270deg, #FF7B00 0%, #FF587A 100%);
  font-size: 24rpx;
  color: #fff;
  width: 114rpx;
  height: 40rpx;
  text-align: center;
}
.on-sale__title {
  font-size: 28rpx;
  color: #848689;
}
.on-sale__expl {
  font-size: 24rpx;
  color: #f48f19;
}
.on-sale__link {
  font-size: 28rpx;
  color: #d4372f;
}